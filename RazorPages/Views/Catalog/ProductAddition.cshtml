@model internet_shop_RazorPages.ICatalogCategory
@{
    ViewData["Title"] = "Product Addition";
}
<h1>@ViewData["Title"]</h1>

<form method="POST">
    <table>
        <tr>
            <td>
                Category:
                <select name="Category">
                    @{
                        foreach (var various in Model.GetCategories())
                        {
                            <option>@various.Name</option>
                        }
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td> Name: </td>
            <td>
                <input type="text" name="Name" required/>
            </td>
        </tr>
        <tr>
            <td> Price: </td>
            <td>
                <input type="number" name="Price" required/>
            </td>
        </tr>
        <tr>
            <td> Count: </td>
            <td>
                <input type="number" name="Count" required/>
            </td>
        </tr>
        <tr>
            <td> Picture: </td>
            <td>
                <input type="text" name="Picture"/>
            </td>
        </tr>
        <tr>
            <td> Description: </td>
            <td>
                <input type="text" name="Description"/>
            </td>
        </tr>
        <tr class="myClass">
            <td>
                <input type="submit" value="SUBMIT" class="btn btn-dark"/> <br/> @ViewData["catalog"]
            </td>
        </tr>

    </table>
</form>